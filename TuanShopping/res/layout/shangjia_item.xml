<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:id="@+id/ll_left" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dip">
        <ImageView 
        	android:id="@+id/iv_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/bg_default_poi_list"/>
    </LinearLayout>
    	
    <RelativeLayout 
        android:id="@+id/ll_center"
        android:layout_toRightOf="@id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/ll_first" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            
            <TextView 
	            android:id="@+id/tv_shangjia_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dip"
	            android:text="美团优惠商家" />
        
	        <ImageView 
	            android:id="@+id/iv_shangjia_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ic_group"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/ll_second" 
            android:layout_below="@id/ll_first"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating_star_small_on"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating_star_small_on"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating_star_small_on"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating_star_small_on"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating_star_small_on"/>
            
            <TextView
                android:id="@+id/tv_youhuijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="优惠价："/>
            
            <TextView 
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"/>
            <TextView 
                android:id="@+id/tv_qi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/ll_third" 
            android:layout_below="@id/ll_second"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KTV"/>
            
            <TextView 
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="香樟路"/>
            
            <TextView 
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小于1千米" />
        </LinearLayout>

    </RelativeLayout>

        
</RelativeLayout>
    
